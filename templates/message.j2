{% extends "_base.j2" %}

{% block header %}
    <title>TINYSTEPS - Message</title>
{%endblock%}

{%  block content %}
    <div class="row mt-5 mb-4">
        <div class="col-10 col-md-6 offset-1 offset-md-3">
            <form action="" class="card mb-3">
                <div class="card-body text-center pt-5">
                    <img src="{{ url_for('static', filename='pict 1.png')}}" class="mb-3" width="95" alt="">
                    <h2 class="h5 card-title mt-2 mb-2">Morris Simmmons</h2>
                    <p class="my-1">Отправить сообщение</p>
                </div>
                <hr/>
                <div class="card-body mx-3">
                    <label class="mb-1 mt-2" for="userName">Вас зовут</label>
                    <input class="form-control" type="text" placeholder="" id="userName">
                    <label class="mb-1 mt-2" for="userPhone">Ваш телефон</label>
                    <input class="form-control" type="tel" placeholder="" id="userPhone">
                    <label class="mb-1 mt-2" for="userMsg">Сообщение</label>
                    <textarea class="form-control" rows="3" id="userMsg"></textarea>
                    <input type="submit" class="btn btn-primary btn-block mt-4 mb-2" value="Записаться на пробный урок">
                </div>
            </form>
        </div>
    </div>
{% endblock %}