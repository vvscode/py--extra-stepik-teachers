{% extends "_base.j2" %}
{% import "_macros.j2" as macros %}

{% block header %}
    <title>TINYSTEPS - Pick</title>
{%endblock%}

{%  block content %}
    <div class="col-12 col-sm-10 col-lg-6 offset-lg-3 offset-sm-1">
        <form action="{{ url_for('request_lesson') }}" class="card mb-5" method="POST">
            {{ form.csrf_token }}
            <div class="card-body text-center pt-5">
                <h1 class="h3 card-title mt-4 mb-2">Подбор преподавателя</h1>
                <p class="px-5">Напишите, чего вам нужно и&nbsp;мы&nbsp;подберем отличных&nbsp;ребят</p>
            </div>
            <hr>
            <div class="card-body mx-3">
                <div class="row">
                    <div class="col">
                        <p>{{ form.goal.label }}</p>
                        {% for subfield in form.goal %}
                            <div class="form-check ">
                                {{ subfield(class="form-check-input") }}
                                {{ subfield.label(class="form-check-label") }}
                            </div>
                        {% endfor %}
                       {{  macros.field_errors(form.goal) }}
                    </div>
                    <div class="col">
                        <p>{{ form.time.label }}</p>
                        {% for subfield in form.time %}
                            <div class="form-check ">
                            {{ subfield(class="form-check-input") }}
                            {{ subfield.label(class="form-check-label") }}
                            </div>
                        {% endfor %}
                        {{  macros.field_errors(form.time) }}
                    </div>
                </div>
            </div>
            <hr>
            <div class="card-body mx-3">
                {{ form.name.label(class="mb-1 mt-2") }}
                {{ form.name(class_="form-control", placeholder="Имя") }}
                {{  macros.field_errors(form.name) }}

                {{ form.phone.label(class="mb-1 mt-2") }}
                {{ form.phone(class_="form-control", placeholder="+372...", required=form.phone.required) }}
                {{ macros.field_errors(form.phone) }}
                <input type="submit" class="btn btn-primary mt-4 mb-2" value="Найдите мне преподавателя">
            </div>
        </form>
    </div>
{% endblock %}